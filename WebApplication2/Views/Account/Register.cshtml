@model RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label for="UserName">Kullanıcı Adı</label>
        <input type="text" class="form-control" asp-for="UserName" required />
    </div>
    <div class="form-group">
        <label for="Email">E-posta</label>
        <input type="email" class="form-control" asp-for="Email" required />
    </div>
    <div class="form-group">
        <label for="Password">Şifre</label>
        <input type="password" class="form-control" asp-for="Password" required />
    </div>
    <div class="form-group">
        <label for="ConfirmPassword">Şifreyi Onayla</label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" required />
    </div>
    <div class="form-group">
        <label for="SecurityQuestion">Güvenlik Sorusu</label>
        <select class="form-control" asp-for="SecurityQuestion" required>
            <option value="Doğduğunuz şehir nedir?">Doğduğunuz şehir nedir?</option>
            <option value="İlkokul öğretmeninizin adı nedir?">İlkokul öğretmeninizin adı nedir?</option>
            <option value="Evcil hayvanınızın adı nedir?">Evcil hayvanınızın adı nedir?</option>
            <option value="En sevdiğiniz kitap nedir?">En sevdiğiniz kitap nedir?</option>
        </select>
    </div>
    <div class="form-group">
        <label for="SecurityAnswer">Güvenlik Sorusu Cevabı</label>
        <input type="text" class="form-control" asp-for="SecurityAnswer" required />
    </div>
    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
</form>
