@model WebApplication2.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Şifreyi Sıfırla";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="ResetPassword" method="post">
    <input type="hidden" asp-for="UserNameOrEmail" />
    <div class="form-group">
        <label asp-for="Password">Yeni Şifre</label>
        <input type="password" class="form-control" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Yeni Şifreyi Onayla</label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Şifreyi Sıfırla</button>
</form>